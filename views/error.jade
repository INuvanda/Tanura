doctype html
html
    head
        title= title
        meta(charset='UTF-8')
        meta(name='description', content=message)
        meta(name='theme-color', content='#ffffff')
        meta(
            name='viewport',
            content='width=device-width, initial-scale=1, minimum-scale=1')
        link(rel='stylesheet', href='/stylesheets/error.css')
    body
        h1= message
        h2= error.status
        pre #{error.stack}
